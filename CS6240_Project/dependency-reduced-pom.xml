<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.CS6240_project</groupId>
  <artifactId>CS6240_project</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>TwitterDataProcessor</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.CS6240_project.TwitterDataProcessor</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-TwitterDataProcessor</finalName>
            </configuration>
          </execution>
          <execution>
            <id>UserTermFrequency</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.CS6240_project.UserTermFrequency</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-UserTermFrequency</finalName>
            </configuration>
          </execution>
          <execution>
            <id>Classification</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.CS6240_project.Classification</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-Classification</finalName>
            </configuration>
          </execution>
          <execution>
            <id>create-shaded-jar-sentiment</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.CS6240_project.SentimentAnalysis</mainClass>
                </transformer>
              </transformers>
              <finalName>CS6240_project-Sentiment-1</finalName>
            </configuration>
          </execution>
          <execution>
            <id>create-shaded-jar-tree</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.CS6240_project.DecisionTreePrediction</mainClass>
                </transformer>
              </transformers>
              <finalName>CS6240_project-Tree-1</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <opencsv.version>5.7.1</opencsv.version>
    <maven.compiler.target>11</maven.compiler.target>
    <maven.compiler.source>11</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <hadoop.version>3.3.6</hadoop.version>
  </properties>
</project>
