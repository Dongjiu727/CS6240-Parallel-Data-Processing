<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.CS6240_hw1</groupId>
  <artifactId>CS6240_hw1</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>combiner</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>[WordCount_real_words]</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-combiner</finalName>
            </configuration>
          </execution>
          <execution>
            <id>no-combiner</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>[WordCount_real_words_NoCombiner]</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-no-combiner</finalName>
            </configuration>
          </execution>
          <execution>
            <id>per-map-tally</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>[WordCount_real_words_PerMapTally]</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-per-map-tally</finalName>
            </configuration>
          </execution>
          <execution>
            <id>per-task-tally</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>[WordCount_real_words_PerTaskTally]</mainClass>
                </transformer>
              </transformers>
              <finalName>${project.artifactId}-per-task-tally</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>11</maven.compiler.target>
    <maven.compiler.source>11</maven.compiler.source>
    <hadoop.version>3.3.6</hadoop.version>
  </properties>
</project>
